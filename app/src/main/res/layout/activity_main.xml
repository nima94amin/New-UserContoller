<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars = "vertical"
        android:scrollbarStyle="insideInset"
        >
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1"
            >
            <!-- Add here which you want -->


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3848f0">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/login"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="90dp" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_usename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android.support.design:hintTextAppearance="@style/GreenTextInputLayout"
                    android:textColor="@android:color/white"
                    android:textColorHint="#ffffff"

                    >

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtusername"
                        android:inputType="text"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="47dp"
                        android:textColor="#fafafa"
                        android:layout_gravity="center_horizontal"
                        android:theme="@style/MyEditText"
                        android:hint="نام کاربری"
                        android:textColorHint="#ffffff"
                        android:textSize="22dp"
                        android:drawableLeft="@drawable/username"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:text="admin" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android.support.design:hintTextAppearance="@style/GreenTextInputLayout"

                    android:id="@+id/input_layout_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textColorHint="#faf8f8">

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtmoble"
                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/txtusername"
                        android:layout_alignStart="@+id/txtusername"
                        android:textColor="#faf7f7"
                        android:layout_gravity="center_horizontal"
                        android:textColorHint="#F6F6F6"
                        android:hint="کلمه عبور"
                        android:focusableInTouchMode="true"
                        android:theme="@style/MyEditText"
                        android:drawableLeft="@drawable/mobile"
                        android:gravity="center"
                        android:inputType="text"
                        android:maxLength="11"
                        android:text="admin"
                        android:password="true" />
                    android:theme="@style/MyEditText"
                    android:gravity="center"
                    android:textSize="22dp" />

                </android.support.design.widget.TextInputLayout>


                <Button
                    android:layout_width="199dp"
                    android:layout_height="wrap_content"
                    android:text="ورود"
                    android:id="@+id/btn_enter"
                    android:layout_above="@+id/btn_internet"
                    android:layout_alignLeft="@+id/btn_internet"
                    android:layout_alignStart="@+id/btn_internet"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:background="#4d5cef"
                    android:textColor="#faf8f8"
                    android:drawableLeft="@drawable/enterlogin"

                    android:textSize="20dp" />


            </LinearLayout>
        </TableLayout>

    </ScrollView>

</LinearLayout>
