<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff00ff"
    android:layout_marginBottom="1dip"
    android:paddingTop="2dp">


    <!-- yek linerlayout azafe mikonim barye sakhtane charchobha.-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:gravity="center_vertical"
        android:background="#2197ea"
        android:id="@+id/card_adapter">

        <ImageView
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:id="@+id/avatar_users"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="10dip"
            android:layout_marginRight="15dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نام کاربری"
                android:id="@+id/tv_username_users"
                android:gravity="top"
                android:layout_marginTop="15dp"
                android:textColor="#ffffff"
                android:typeface="serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09196113387"
                android:id="@+id/tv_mobile_users"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ثبت نام کرده"
                android:id="@+id/tv_register_users"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="25dp"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اضافه کردن به لیست"
                android:id="@+id/button"
                android:background="#029acc"
                android:textColor="#ffffff"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>
